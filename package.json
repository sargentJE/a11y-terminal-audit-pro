    "puppeteer": "^24.36.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^17.3.0",
    "prettier": "^3.2.5"
  },
  "license": "MIT",
  "keywords": [
    "accessibility",
    "a11y",
    "lighthouse",
    "axe",
    "pa11y",
