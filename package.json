{
  "name": "a11y-terminal-audit-pro",
  "version": "2.0.0",
  "description": "Production-grade CLI: deep-crawl a site and run Lighthouse + axe-core + Pa11y accessibility audits with WCAG compliance scoring, multi-format reports, and CI/CD integration.",
  "type": "module",
  "bin": {
    "a11y-audit-pro": "./index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "audit": "node index.js",
